{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "target": "ES2019",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "resolveJsonModule": true,
        "declaration": true,
        "outDir": "dist",
        "typeRoots": [
            "./src/types",
            "./node_modules/@types"
        ],
        "types": [
            "node"
        ]
    },
    "include": [
        "src"
    ]
}