{
    "compilerOptions": {
        "target": "ES2019",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@42robotics/domain": [
                "packages/domain/src"
            ],
            "@42robotics/domain/*": [
                "packages/domain/src/*"
            ],
            "@42robotics/infra": [
                "packages/infra/src"
            ],
            "@42robotics/infra/*": [
                "packages/infra/src/*"
            ]
        }
    }
}